<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="6dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="#0528EC"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="140dp">




    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/personImageViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/icon_background"
            android:src="@drawable/person" />


    </LinearLayout>
    <LinearLayout
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="2.2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/nameTextViewId"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingLeft="10dp"
            android:text="Name"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/locationTextViewId"
            android:drawableLeft="@drawable/location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/phoneNumberTextViewId"
            android:textColor="#EC0505"
            android:background="@drawable/phone_number_textview_background"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingLeft="10dp"
            android:text="01994215664"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight=".8"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/callImageViewId"
            android:background="@drawable/icon_background"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:src="@drawable/phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/messageImageViewId"
            android:layout_margin="5dp"
            android:background="@drawable/icon_background"
            android:padding="4dp"
            android:layout_weight="1"
            android:src="@drawable/message"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


    </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>

